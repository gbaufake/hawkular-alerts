<%= render partial: 'title', locals: { title: 'Tests Cases', bootstrap_class: 'col-lg-12' } %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> List of Test Cases
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                  <table class="table table-bordered table-hover table-striped">

                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Environment </th>
                      <th>Actions</th>
                      <th>Executions</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @test_cases.each do |test_case| %>
                    <tr>
                      <td><%= test_case.name %></td>
                      <td>
                        <%= render partial: 'layouts/partials/label-environment.html.erb' , locals: {test_case: test_case} %>
                      </td>

                      <td>
                        <%= link_to test_case, class: "btn btn-primary btn-circle", 'data-toggle': 'tooltip', 'data-placement':'top', title: 'Show Test Case'  do %>
                        <i class="fa fa-eye"></i>
                      <% end %>

                        <%= link_to edit_test_case_path(test_case) , class: "btn btn-success btn-circle", 'data-toggle': 'tooltip', 'data-placement':'top', title: 'Edit Test Case'  do%>
                          <i class="fa fa-pencil"></i>
                        <% end %>

                        <%= link_to test_case, class: "btn btn-danger btn-circle", method: :delete, data: { confirm: 'Are you sure?' } , 'data-toggle': 'tooltip', 'data-placement':'top', title: 'Delete Test Case' do %>
                            <i class="fa fa-trash-o"></i>
                        <% end %>

                      </td>

                      <td>
                        <%= link_to  test_case_executions_path(test_case.id), class: "btn btn-info btn-circle", 'data-toggle': 'tooltip', 'data-placement':'top', title: 'Executions'  do %>
                      <i class="fa fa-gear"></i>
                            <% end %>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                </div>
           </div>
        </div>
      </div>
     </div>
  </div>
</div>
