<div class = "col-lg-12">
  <div class="panel panel-default" id="accordion">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseTestCase" aria-expanded="true" class=""><%= title %></a>
      </h4>
      </div>
      <div id="collapseTestCase" class="panel-collapse collapse in" aria-expanded="true">
    <div class="panel-body">

        <%= simple_form_for @test_case do |f| %>
          <%= f.input :user , input_html: { class: 'form-control' }, disabled: disabled, required: true%>
          <%= f.input :password, input_html: { class: 'form-control' }, disabled: disabled, required: true %>
          <fieldset>
          <%= f.simple_fields_for :headers do |ff|%>

            <%= ff.input :content_type, collection:['application/json'], input_html: { class: 'form-control' }, disabled: disabled  %>
            <%= ff.input :hawkular_tenant, input_html: { class: 'form-control' }, disabled: disabled  %>

          <% end %>
        </fieldset>
          <br>

          <%= f.simple_fields_for :parameters do |ff|%>
            <%= ff.input :name, input_html: { class: 'form-control' } , disabled: disabled%>
            <%=  ff.input :http_method, collection:['GET', 'POST', 'DELETE', 'PUT'] , input_html: { class: 'form-control' }, disabled: disabled  %>
            <%= ff.input :hawkular_environment, input_html: { class: 'form-control' }, disabled: disabled , required: true %>
            <%= ff.input :hawkular_endpoint, input_html: { class: 'form-control' }, disabled: disabled, required: true  %>
             <%= f.label :ssl %>
            <%= ff.collection_radio_buttons :ssl, [[true, 'Yes'] ,[false, 'No']], :first, :last  do |b|
              b.label { b.radio_button + b.text }
            end%>
              <br>
                        <br>
              <% unless  disabled %>
              <%= button_tag(type: 'submit', class: "btn btn-success btn-block") do %>
                  <i class="fa fa-floppy-o"></i> Save
              <% end %>
              <% end %>
              <%= link_to test_cases_path, class:" btn btn-info btn-block"  do %>
              <i class="fa fa-arrow-left"></i> Back
            <% end %>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
